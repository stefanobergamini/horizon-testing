{% doc %}
  @prompt
    need a featured collection with tabs to other collections and a option of the first card be fixed with a background image and text image and button on top. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collections-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-featured-collections__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-collections__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-featured-collections__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: {{ settings.type_heading_font.weight }};
  }

  .ai-featured-collections__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-featured-collections__tabs-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-bottom: 32px;
    flex-wrap: wrap;
  }

  .ai-featured-collections__tab-{{ ai_gen_id }} {
    padding: 12px 24px;
    background: {{ block.settings.tab_background }};
    color: {{ block.settings.tab_text_color }};
    border: 1px solid {{ block.settings.tab_border_color }};
    border-radius: {{ block.settings.tab_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 14px;
    font-weight: 500;
  }

  .ai-featured-collections__tab-{{ ai_gen_id }}:hover {
    background: {{ block.settings.tab_hover_background }};
    color: {{ block.settings.tab_hover_text_color }};
  }

  .ai-featured-collections__tab-{{ ai_gen_id }}.active {
    background: {{ block.settings.tab_active_background }};
    color: {{ block.settings.tab_active_text_color }};
    border-color: {{ block.settings.tab_active_border_color }};
  }

  .ai-featured-collections__content-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-featured-collections__collection-{{ ai_gen_id }} {
    display: none;
  }

  .ai-featured-collections__collection-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-featured-collections__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-featured-collections__card-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    background: {{ block.settings.card_background }};
    border: 1px solid {{ block.settings.card_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-featured-collections__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-featured-collections__fixed-card-{{ ai_gen_id }} {
    position: relative;
    background-image: url('{{ block.settings.fixed_card_image | image_url: width: 600 }}');
    background-size: cover;
    background-position: center;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
  }

  .ai-featured-collections__fixed-card-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, {{ block.settings.fixed_card_overlay_opacity | divided_by: 100.0 }});
  }

  .ai-featured-collections__fixed-card-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    padding: 32px;
  }

  .ai-featured-collections__fixed-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.fixed_card_title_size }}px;
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-featured-collections__fixed-card-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.fixed_card_text_size }}px;
    margin: 0 0 24px;
    opacity: 0.9;
  }

  .ai-featured-collections__fixed-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background: {{ block.settings.fixed_card_button_bg }};
    color: {{ block.settings.fixed_card_button_color }};
    text-decoration: none;
    border-radius: {{ block.settings.fixed_card_button_radius }}px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .ai-featured-collections__fixed-card-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.fixed_card_button_hover_bg }};
    transform: translateY(-2px);
  }

  .ai-featured-collections__product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }

  .ai-featured-collections__product-info-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-featured-collections__product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px;
    color: {{ block.settings.product_title_color }};
  }

  .ai-featured-collections__product-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.product_price_color }};
    margin: 0 0 12px;
  }

  .ai-featured-collections__product-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 16px;
    background: {{ block.settings.product_button_bg }};
    color: {{ block.settings.product_button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.product_button_radius }}px;
    font-size: 14px;
    transition: all 0.3s ease;
  }

  .ai-featured-collections__product-link-{{ ai_gen_id }}:hover {
    background: {{ block.settings.product_button_hover_bg }};
  }

  .ai-featured-collections__placeholder-{{ ai_gen_id }} {
    background: #f4f4f4;
    height: 250px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }

  .ai-featured-collections__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 120px;
    max-height: 120px;
  }

  .ai-featured-collections__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  @media screen and (max-width: 768px) {
    .ai-featured-collections__tabs-{{ ai_gen_id }} {
      gap: 4px;
    }

    .ai-featured-collections__tab-{{ ai_gen_id }} {
      padding: 10px 16px;
      font-size: 13px;
    }

    .ai-featured-collections__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-featured-collections__fixed-card-content-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-featured-collections__fixed-card-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.fixed_card_title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<featured-collections-{{ ai_gen_id }}
