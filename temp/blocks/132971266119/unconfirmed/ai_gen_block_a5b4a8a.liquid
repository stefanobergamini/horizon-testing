                    >
                  {% else %}
                    <div class="ai-featured-collections__placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  
                  <div class="ai-featured-collections__product-info-{{ ai_gen_id }}">
                    <h3 class="ai-featured-collections__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                    <div class="ai-featured-collections__product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                    <a href="{{ product.url }}" class="ai-featured-collections__product-link-{{ ai_gen_id }}">
                      {{ block.settings.product_button_text }}
                    </a>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="ai-featured-collections__empty-state-{{ ai_gen_id }}">
        <p>Select collections to display products</p>
      </div>
    {% endif %}
  </div>
</featured-collections-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollections{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-featured-collections__tab-{{ ai_gen_id }}');
        this.collections = this.querySelectorAll('.ai-featured-collections__collection-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const collectionIndex = tab.getAttribute('data-collection-index');
            this.switchCollection(collectionIndex);
          });
        });
      }

      switchCollection(index) {
        this.tabs.forEach((tab) => {
          tab.classList.remove('active');
        });

        this.collections.forEach((collection) => {
          collection.classList.remove('active');
        });

        const activeTab = this.querySelector(`[data-collection-index="${index}"]`);
        const activeCollection = this.querySelector(`.ai-featured-collections__collection-{{ ai_gen_id }}[data-collection-index="${index}"]`);

        if (activeTab) activeTab.classList.add('active');
        if (activeCollection) activeCollection.classList.add('active');
      }
    }

    customElements.define('featured-collections-{{ ai_gen_id }}', FeaturedCollections{{ ai_gen_id }});
  })();
</script>

