    {% assign collection_names = '' %}
    
    {% if block.settings.collection_1 != blank %}
      {% assign collections_array = collections_array | append: block.settings.collection_1.id | append: ',' %}
      {% assign collection_names = collection_names | append: block.settings.collection_1.title | append: ',' %}
    {% endif %}
    
    {% if block.settings.collection_2 != blank %}
      {% assign collections_array = collections_array | append: block.settings.collection_2.id | append: ',' %}
      {% assign collection_names = collection_names | append: block.settings.collection_2.title | append: ',' %}
    {% endif %}
    
    {% if block.settings.collection_3 != blank %}
      {% assign collections_array = collections_array | append: block.settings.collection_3.id | append: ',' %}
      {% assign collection_names = collection_names | append: block.settings.collection_3.title | append: ',' %}
    {% endif %}
    
    {% if block.settings.collection_4 != blank %}
      {% assign collections_array = collections_array | append: block.settings.collection_4.id | append: ',' %}
      {% assign collection_names = collection_names | append: block.settings.collection_4.title | append: ',' %}
    {% endif %}

    {% assign collections_ids = collections_array | split: ',' %}
    {% assign collection_titles = collection_names | split: ',' %}

    {% if collections_ids.size > 0 %}
      <div class="ai-featured-collections__tabs-{{ ai_gen_id }}">
        {% for collection_id in collections_ids %}
          {% if collection_id != blank %}
            {% assign collection_index = forloop.index0 %}
            <button
              class="ai-featured-collections__tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              data-collection-index="{{ collection_index }}"
            >
              {{ collection_titles[collection_index] }}
            </button>
          {% endif %}
        {% endfor %}
      </div>

      <div class="ai-featured-collections__content-{{ ai_gen_id }}">
        {% if block.settings.collection_1 != blank %}
          <div class="ai-featured-collections__collection-{{ ai_gen_id }} active" data-collection-index="0">
            <div class="ai-featured-collections__grid-{{ ai_gen_id }}">
              {% if block.settings.show_fixed_card %}
                <div class="ai-featured-collections__card-{{ ai_gen_id }} ai-featured-collections__fixed-card-{{ ai_gen_id }}">
                  {% if block.settings.fixed_card_image == blank %}
                    <div class="ai-featured-collections__placeholder-{{ ai_gen_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  <div class="ai-featured-collections__fixed-card-overlay-{{ ai_gen_id }}"></div>
                  <div class="ai-featured-collections__fixed-card-content-{{ ai_gen_id }}">
                    {% if block.settings.fixed_card_title != blank %}
                      <h3 class="ai-featured-collections__fixed-card-title-{{ ai_gen_id }}">{{ block.settings.fixed_card_title }}</h3>
                    {% endif %}
                    {% if block.settings.fixed_card_text != blank %}
                      <p class="ai-featured-collections__fixed-card-text-{{ ai_gen_id }}">{{ block.settings.fixed_card_text }}</p>
                    {% endif %}
                    {% if block.settings.fixed_card_button_text != blank and block.settings.fixed_card_button_link != blank %}
                      <a href="{{ block.settings.fixed_card_button_link }}" class="ai-featured-collections__fixed-card-button-{{ ai_gen_id }}">
                        {{ block.settings.fixed_card_button_text }}
                      </a>
                    {% endif %}
                  </div>
                </div>
              {% endif %}

              {% assign products_limit = block.settings.products_to_show %}
              {% if block.settings.show_fixed_card %}
                {% assign products_limit = products_limit | minus: 1 %}
              {% endif %}

              {% for product in block.settings.collection_1.products limit: products_limit %}
                <div class="ai-featured-collections__card-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-featured-collections__product-image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="400"
                      height="250"
                    >
                  {% else %}
                    <div class="ai-featured-collections__placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  
                  <div class="ai-featured-collections__product-info-{{ ai_gen_id }}">
                    <h3 class="ai-featured-collections__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                    <div class="ai-featured-collections__product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                    <a href="{{ product.url }}" class="ai-featured-collections__product-link-{{ ai_gen_id }}">
                      {{ block.settings.product_button_text }}
                    </a>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}

        {% if block.settings.collection_2 != blank %}
          <div class="ai-featured-collections__collection-{{ ai_gen_id }}" data-collection-index="1">
            <div class="ai-featured-collections__grid-{{ ai_gen_id }}">
