<featured-collections-{{ ai_gen_id }}
  class="ai-featured-collections-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-featured-collections__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-featured-collections__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-collections__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-featured-collections__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% liquid
      assign available_collections = ''
      assign collection_count = 0
      
      if block.settings.collection_1 != blank
        assign available_collections = available_collections | append: '1,'
        assign collection_count = collection_count | plus: 1
      endif
      
      if block.settings.collection_2 != blank
        assign available_collections = available_collections | append: '2,'
        assign collection_count = collection_count | plus: 1
      endif
      
      if block.settings.collection_3 != blank
        assign available_collections = available_collections | append: '3,'
        assign collection_count = collection_count | plus: 1
      endif
      
      if block.settings.collection_4 != blank
        assign available_collections = available_collections | append: '4,'
        assign collection_count = collection_count | plus: 1
      endif
      
      assign available_collections = available_collections | remove_last: ','
      assign collection_numbers = available_collections | split: ','
    %}

    {% if collection_count > 0 %}
      <div class="ai-featured-collections__tabs-{{ ai_gen_id }}">
        {% for collection_num in collection_numbers %}
          {% liquid
            assign collection_key = 'collection_' | append: collection_num
            assign current_collection = block.settings[collection_key]
          %}
          {% if current_collection != blank %}
            <button
              class="ai-featured-collections__tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              data-collection-index="{{ collection_num }}"
            >
              {{ current_collection.title }}
            </button>
          {% endif %}
        {% endfor %}
      </div>

      <div class="ai-featured-collections__content-{{ ai_gen_id }}">
        {% for collection_num in collection_numbers %}
          {% liquid
            assign collection_key = 'collection_' | append: collection_num
            assign current_collection = block.settings[collection_key]
          %}
          {% if current_collection != blank %}
            <div
              class="ai-featured-collections__collection-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              data-collection-index="{{ collection_num }}"
            >
              {% if current_collection.products.size > 0 %}
                <div class="ai-featured-collections__products-{{ ai_gen_id }}">
                  {% for product in current_collection.products limit: block.settings.products_to_show %}
                    <a href="{{ product.url }}" class="ai-featured-collections__product-{{ ai_gen_id }}">
                      <div class="ai-featured-collections__product-image-{{ ai_gen_id }}">
                        {% if product.featured_image %}
                          <img
                            src="{{ product.featured_image | image_url: width: 400 }}"
                            alt="{{ product.featured_image.alt | escape }}"
                            loading="lazy"
                            width="400"
                            height="400"
                          >
                        {% else %}
                          <div class="ai-featured-collections__product-placeholder-{{ ai_gen_id }}">
                            {{ 'product-1' | placeholder_svg_tag }}
                          </div>
                        {% endif %}
                      </div>
                      <div class="ai-featured-collections__product-info-{{ ai_gen_id }}">
                        <h3 class="ai-featured-collections__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                        <div class="ai-featured-collections__product-price-{{ ai_gen_id }}">
                          {{ product.price | money }}
                        </div>
                      </div>
                    </a>
                  {% endfor %}
                </div>

                {% if block.settings.show_view_all %}
                  <div class="ai-featured-collections__view-all-{{ ai_gen_id }}">
                    <a href="{{ current_collection.url }}" class="ai-featured-collections__view-all-link-{{ ai_gen_id }}">
                      {{ block.settings.view_all_text }}
                    </a>
                  </div>
                {% endif %}
              {% else %}
                <div class="ai-featured-collections__empty-state-{{ ai_gen_id }}">
                  {{ 'collection-1' | placeholder_svg_tag }}
                  <p>This collection is empty. Add some products to get started.</p>
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-featured-collections__empty-state-{{ ai_gen_id }}">
        {{ 'collection-1' | placeholder_svg_tag }}
        <p>Select collections to display in the block settings.</p>
      </div>
    {% endif %}
  </div>
</featured-collections-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollections{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-featured-collections__tab-{{ ai_gen_id }}');
        this.collections = this.querySelectorAll('.ai-featured-collections__collection-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', (e) => {
            e.preventDefault();
            const collectionIndex = tab.dataset.collectionIndex;
            this.switchToCollection(collectionIndex, tab);
          });
        });
      }

      switchToCollection(collectionIndex, activeTab) {
        this.tabs.forEach((tab) => {
          tab.classList.remove('active');
        });

        this.collections.forEach((collection) => {
          collection.classList.remove('active');
        });

        activeTab.classList.add('active');
        
        const targetCollection = this.querySelector(`[data-collection-index="${collectionIndex}"]`);
        if (targetCollection && targetCollection.classList.contains('ai-featured-collections__collection-{{ ai_gen_id }}')) {
          targetCollection.classList.add('active');
        }
      }
    }

    customElements.define('featured-collections-{{ ai_gen_id }}', FeaturedCollections{{ ai_gen_id }});
  })();
</script>

