{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collections-{{ ai_gen_id }} {
    padding: 40px 0;
  }

  .ai-featured-collections__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-collections__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-featured-collections__title-{{ ai_gen_id }} {
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: {{ settings.type_heading_font.weight }};
  }

  .ai-featured-collections__description-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-featured-collections__tabs-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .ai-featured-collections__tab-{{ ai_gen_id }} {
    background: {{ block.settings.tab_background }};
    color: {{ block.settings.tab_text_color }};
    border: {{ block.settings.tab_border_width }}px solid {{ block.settings.tab_border_color }};
    border-radius: {{ block.settings.tab_border_radius }}px;
    padding: 12px 24px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
  }

  .ai-featured-collections__tab-{{ ai_gen_id }}:hover {
    background: {{ block.settings.tab_hover_background }};
    color: {{ block.settings.tab_hover_text_color }};
    border-color: {{ block.settings.tab_hover_border_color }};
  }

  .ai-featured-collections__tab-{{ ai_gen_id }}.active {
    background: {{ block.settings.tab_active_background }};
    color: {{ block.settings.tab_active_text_color }};
    border-color: {{ block.settings.tab_active_border_color }};
  }

  .ai-featured-collections__content-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-featured-collections__collection-{{ ai_gen_id }} {
    display: none;
  }

  .ai-featured-collections__collection-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-featured-collections__products-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    margin-bottom: 32px;
  }

  .ai-featured-collections__product-{{ ai_gen_id }} {
    background: {{ block.settings.product_card_background }};
    border-radius: {{ block.settings.product_card_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.product_card_border_color }};
  }

  .ai-featured-collections__product-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .ai-featured-collections__product-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .ai-featured-collections__product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-featured-collections__product-{{ ai_gen_id }}:hover .ai-featured-collections__product-image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-featured-collections__product-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-featured-collections__product-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-featured-collections__product-info-{{ ai_gen_id }} {
    padding: 16px;
  }

  .ai-featured-collections__product-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-featured-collections__product-price-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: 14px;
    color: {{ block.settings.price_color }};
    font-weight: 600;
  }

  .ai-featured-collections__view-all-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-featured-collections__view-all-link-{{ ai_gen_id }} {
    display: inline-block;
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: 12px 32px;
    text-decoration: none;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: 14px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .ai-featured-collections__view-all-link-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-featured-collections__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-featured-collections__empty-state-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    margin-bottom: 16px;
    opacity: 0.3;
  }

  @media screen and (max-width: 768px) {
    .ai-featured-collections__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-featured-collections__products-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
    }

    .ai-featured-collections__tabs-{{ ai_gen_id }} {
      gap: 4px;
    }

    .ai-featured-collections__tab-{{ ai_gen_id }} {
      padding: 10px 16px;
      font-size: 13px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-featured-collections__products-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }
